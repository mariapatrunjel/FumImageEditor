<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.editor.image.maria.funimageeditor.activities.CameraActivity">


    <com.editor.image.maria.funimageeditor.utils.MyJavaCameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/java_camera_view"/>


    <ImageButton
        android:id="@+id/settingsActivity"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:contentDescription="@null"
        android:cropToPadding="false"
        android:onClick="onClickSettingsActivity"
        android:scaleType="fitXY"
        android:src="@drawable/settings_activity"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageButton
        android:id="@+id/swapCamera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:contentDescription="@null"
        android:cropToPadding="false"
        android:onClick="onSwapCamera"
        android:scaleType="fitXY"
        android:src="@drawable/reverse_camera"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/flashlight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:contentDescription="@null"
        android:cropToPadding="false"
        android:onClick="onFlashlight"
        android:scaleType="fitXY"
        android:src="@drawable/flash_light_off"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/swapCamera"
        android:layout_marginStart="8dp"/>

    <ImageButton
        android:id="@+id/takePictureButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:contentDescription="@null"
        android:cropToPadding="false"
        android:onClick="onTakePicture"
        android:scaleType="fitXY"
        android:src="@drawable/camera"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.981">

            <ImageButton
                android:id="@+id/normalFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onNormalFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_normal"/>

            <ImageButton
                android:id="@+id/hEqYFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onHEqYFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_enchante"/>

            <ImageButton
                android:id="@+id/hEqSFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onHEqSFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_define"/>

            <ImageButton
                android:id="@+id/hEqVFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onHEqVFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_emphasize"/>

            <ImageButton
                android:id="@+id/redFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onRedFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_red"/>

            <ImageButton
                android:id="@+id/greenFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onGreenFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_green"/>

            <ImageButton
                android:id="@+id/blueFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onBlueFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_blue"/>

            <ImageButton
                android:id="@+id/magentaFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onMagentaFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_magenta"/>

            <ImageButton
                android:id="@+id/sketchFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onSketchFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_sketch"/>

            <ImageButton
                android:id="@+id/cannyFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onCannyFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_canny"/>

            <ImageButton
                android:id="@+id/BinaryFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onBinaryFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_binary"/>

            <ImageButton
                android:id="@+id/grayFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onGrayFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_gray"/>

            <ImageButton
                android:id="@+id/negativeFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onNegativeFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_negative"/>

            <ImageButton
                android:id="@+id/sepiaFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onSepiaFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_sepia"/>

            <ImageButton
                android:id="@+id/pinkFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onPinkFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_antique"/>

            <ImageButton
                android:id="@+id/hotFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onHotFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_warm"/>

            <ImageButton
                android:id="@+id/boneFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onBoneFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_cold"/>

            <ImageButton
                android:id="@+id/newoceanFilterButton"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:contentDescription="@null"
                android:cropToPadding="false"
                android:onClick="onOceanFilterClicked"
                android:scaleType="fitXY"
                android:src="@drawable/filter_ocean"/>

        </LinearLayout>
    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>
